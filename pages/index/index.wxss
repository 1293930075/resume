/**index.wxss**/
.photo {
  display: block;
  width: 90%;
  margin: 0 auto;
  position: fixed;
  bottom: 0;
}
.cover-info {
  position: absolute;
  left: 50px;
  top: 30px;
}
.cover-name {
  font-size: 30px;
  font-weight: bold;
  display: block;
  color: block;
  letter-spacing: 1px;
}
.cover-spell {
  font-size: 20px;
  letter-spacing: 1px;
}
.big-circle {
  background-color: rgba(0, 165, 34, 0.7);
  width: 260px;
  height: 260px;
  border-radius: 50%;
  position: absolute;
  left: -150px;
  top: 110px;
}
.medium-circle {
  background-color: rgba(0, 165, 34, 0.7);
  width: 160px;
  height: 160px;
  border-radius: 50%;
  position: absolute;
  right: -80px;
  top: 110px;
}
.small-circle {
  background-color: rgba(0, 165, 34, 0.7);
  width: 50px;
  height: 50px;
  border-radius: 50%;
  position: absolute;
  left: -10px;
  bottom: 110px;
}
.cover-work {
  position: absolute;
  bottom: 200px;
  width: 100%;
  text-align: center;
  background-color: rgba(0,0,0,0.2);
  padding: 20px 0;
}
.cover-job {
  display: block;
  color: #fff;
  font-size: 30px;
  font-weight: bold;
}
.cover-exp {
  display: block;
  color: #fff;
  font-size: 20px;
}
.navigation {
  position: absolute;
  top: 40px;
  right: 10px;
  font-size: 18px;
}


 /* 第二屏 */
 .resume,.work {
   margin: 0 20px
 }
 .section {
   padding-bottom: 30px;
 }
 .section:nth-last-child(2) {
  padding: 0 ;
}
 .section-info {
   display:flex;
   padding-bottom: 5px;
   margin-bottom: 10px;
   border-bottom: 1px solid #333;
 }
 .section-seq {
   width: 22px;
   height:22px;
   line-height: 22px;
   text-align: center;
   background: #444;
   font-weight: bold;
   margin-right: 10px;
   color: white;
 }
 .column {
    font-size: 16px;
    border-bottom: dashed 1px #333;
    padding: 10px 0;
 }
 .col-1 {
  column-count: 1;
}
 .col-2 {
  column-count: 2;
 }
 .info {
   display: block;
 }

 .skill {
   padding: 5px 0;
 }
 .skill-name {
   margin-bottom: 5px;
   font-size: 16px;
   display: block;
 }
 .education {
  border-bottom: dashed 1px #999;
  padding: 10px 0;
 }
 .education:last-child {
   border: none;
 }
 .school-text {
   font-size: 16px;
 }
 .icon-xuexiao,.icon-gongzuojingli,.icon-xiangmujingli {
   font-size:20px;
 }
 .icon-zhuanye {
  font-size:20px;
 }
 .major {
   display:flex;
   justify-content:space-between;
   align-items: center;
   padding:10px 0;
 }
 .desc {
   color: #999;
   line-height: 1.5;

 }
 .page {
   text-align: center;
   color: #666;
   display: block;
   font-size: 16px;
   padding-bottom: 15px;
 }
 .work .section {
   padding: 0;
 }
 .project-name {
   padding-bottom: 6px;
 }